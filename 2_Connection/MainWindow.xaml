<Window x:Class="Exercise_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_2"
        mc:Ignorable="d"
        Title="Старт" Height="140.39" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBoxInfo" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="5" TextAlignment="Left" FontSize="20"/>
        <Button x:Name="buttonStart" Content="Подключение" Grid.Column="0" HorizontalAlignment="Center" MinWidth="100"  Click="buttonStart_Click" Margin="148,53,148,28"/>
        <Button x:Name="buttonStop" Content="Отключение" Grid.Column="1" HorizontalAlignment="Center" MinWidth="100" Margin="148,53,148,28" Click="buttonStop_Click"/>
    </Grid>
</Window>
